<div id="documentInfo" class="w3-row-padding" style="display: none;">
  <div class="w3-rest">
    <label id="documentName" class="w3-center-align w3-large">Document Name</label>
    <p class="w3-text-blue w3-large"> Please type the document name you want to add or modify here. The document name must is <span class="w3-text-red">UNIQUE</span>.</p>
  </div>
  <div class="w3-rest">
    <input class="w3-input w3-border w3-padding" type="text" placeholder="Search for names.." id="documentNameInput" onkeyup="myFunction()" autofocus>

      <table class="w3-table-all w3-margin-top" id="documentInfoTable">
        <tr>
          <th style="width:60%;">Document Name</th>
          <th style="width:40%;">Owner</th>
        </tr>
      </table>
  </div>
    <button class = "w3-button w3-half w3-indigo w3-hover-yellow" onclick="addNewDocument()"> ADD NEW </button>
    <button class = "w3-button w3-half w3-indigo w3-hover-yellow" onclick="modifyADocument()"> MODIFY </button>
</div>

<div class="w3-panel w3-orange w3-container warningBox" id="addNewWarning" style="display: none;">
  <button class = "w3-button w3-half w3-green w3-hover-yellow" onclick="confirmAddNew()"> ACCEPT </button>
  <button class = "w3-green w3-half w3-indigo w3-hover-yellow" onclick="cancelWarning()"> DENIED </button>
</div>

<div class="w3-panel w3-red w3-container warningBox" id="errorWarning" style="display: none;">
