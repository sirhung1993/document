<!-- views/partials/header.ejs -->
<div class=" w3-bar w3-blue ">
  <div class="w3-row-padding">
    <div class="w3-half">

    </div>
    <div class="w3-col" style="width:20%">
      <p class="w3-bar-item w3-button w3-mobile w3-xlarge">RBT Document</p>
    </div>
    <div class="w3-col" style="width:40%">
      <p></p>
    </div>
    <div class="w3-row-padding w3-rest">
      <div class="w3-col w3-third w3-border w3-hover-border-yellow w3-center w3-hover-yellow w3-green" id="register" onclick="registerNewUser()">
          <p class="w3-xlarge w3-text-black">Register</p>
      </div>
      <div class="w3-col w3-third w3-border w3-hover-border-yellow w3-center w3-hover-yellow w3-green" id="login"   onclick='$("#registerBox").hide();$("#loginBox").toggle()'>
          <p class="w3-xlarge w3-text-black">Log in</p>
      </div>
      <div class="w3-col w3-third w3-border w3-hover-border-yellow w3-center w3-hover-yellow w3-green" id="logout" style="display: none;" onclick="logout()">
          <p class="w3-xlarge w3-text-black">Log out</p>
      </div>
    </div>
  </div>
</div>

<div class="w3-display-container" style="height:300px;display:none;" id="registerBox">
  <div class="w3-middle">
    <div class="w3-container w3-light-blue">
      <h2>Regiter form</h2>
    </div>

    <div class="w3-container" id="registerForm" onkeypress="onLoginInput(event)">
      <label>Your tester ID</label>
      <input class="w3-input" type="text" name="regTesterID" placeholder="buh81hc">
      <label>Password</label>
      <input class="w3-input" type="password" name="regPassword1">
      <label>Re-type password</label>
      <input class="w3-input" type="password" name="regPassword2">
    </div>
      <button id="regButton" class="w3-round w3-btn-block w3-blue w3-ripple w3-hover-indigo" onclick="regRequest()" >Register as a regular user! </button>
  </div>
</div>
